<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_grad_back">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_50px"
        android:layout_height="@dimen/_75px"
        android:rotation="240"
        android:elevation="@dimen/_3pxh"
        android:src="@drawable/round_arc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_90pxh"
        android:layout_height="@dimen/_265pxh"
        android:layout_marginTop="@dimen/_70pxh"
        android:layout_weight="1"
        android:elevation="@dimen/_3pxh"
        android:src="@drawable/round_arc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_90pxh"
        android:layout_height="@dimen/_100pxh"
        android:layout_marginEnd="-20dp"
        android:elevation="@dimen/_5pxv"
        android:rotation="180"
        android:src="@drawable/round_arc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>