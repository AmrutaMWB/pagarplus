                            android:layout_height="wrap_content"
                            android:hint="@string/lbl_mobile"
                            style="@style/MyDenseOutlined">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etEdtTxtmobileNo"
