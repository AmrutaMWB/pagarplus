                                android:layout_marginEnd="@dimen/_20pxh"
                                android:layout_marginTop="@dimen/_8pxv"
                                android:layout_width="@dimen/_70pxh"
                                android:singleLine="true"
                                android:text="@string/lbl_select"
                                android:textAllCaps="false"
